<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.testwidget"
    android:versionCode="6"
    android:versionName="0.95 RC" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.NFC" />

    <uses-feature
        android:name="android.hardware.nfc"
        android:required="false" />

    <application
        android:name="com.testwidget.App"
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name" >
        <activity
            android:name="com.testwidget.activities.UpdateActivity"
            android:excludeFromRecents="true"
            android:noHistory="true"
            android:label="LABEL"
            android:theme="@style/MyTheme"
            android:windowSoftInputMode="stateHidden|adjustResize" />
        <!-- The widget provider -->
        <receiver android:name="com.testwidget.activities.TranskartWidget" >
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
                <action android:name="com.testwidget.ACTION_UPDATE_CARD" />
                <action android:name="com.testwidget.ACTION_NEXT_CARD" />
                <action android:name="com.testwidget.ACTION_PREVIOUS_CARD" />
            </intent-filter>
            <!-- This specifies the widget provider info -->
            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/widgetinfo" />
        </receiver>

        <!--<activity
            android:name="com.testwidget.activities.ShowAllActivity"
            android:theme="@android:style/Theme.Holo.Light" 
            android:label="@string/title_activity_show_info"
            android:finishOnTaskLaunch="true"
            android:noHistory="true"
            android:excludeFromRecents="true"
           >
        </activity>-->
        <activity
            android:name="com.testwidget.activities.ShowAllActivity"
            android:theme="@android:style/Theme.Holo.Light" 
            android:label="@string/title_activity_show_info"
            android:launchMode="singleTask"
           >
        </activity>
        <activity
            android:name="com.testwidget.activities.AddNewCardActivity"
            android:label="@string/title_activity_add_new_card"
            android:theme="@android:style/Theme.Holo.Light" >
            
            <intent-filter>
                <action android:name="android.nfc.action.TECH_DISCOVERED" />
            </intent-filter>

            <meta-data
                android:name="android.nfc.action.TECH_DISCOVERED"
                android:resource="@xml/nfc_tech_filter" />
        </activity>
    </application>

</manifest>